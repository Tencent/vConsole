{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "targets": "defaults",
        "loose": true
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    "@babel/plugin-transform-block-scoping",
    "@babel/plugin-proposal-export-namespace-from",
    "@babel/plugin-proposal-object-rest-spread"
  ]
}
